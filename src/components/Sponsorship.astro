---
import { Picture } from "astro:assets";
import { Icon } from "astro-icon/components";
import { Content as SponsorshipTable } from "../../pausesummit/sponsorshipTable.md";
import eyobLogo from "../assets/logo-eyob.jpg";
import gkuLogo from "../assets/logo-gku.png";
import pxLogo from "../assets/logo-px.png";
import rwmLogo from "../assets/logo-rwm.png";
import sonicLogo from "../assets/logo-sonicsight.png";
import wlLogo from "../assets/logo-wl.png";
import { InfiniteSliderBasic } from "../components/InfiniteSliderBasic";
---

<section id="sponsors" class="relative overflow-hidden">
  <div
    class="bg-gradient-to-b from-primary to-primary-focus text-primary-content"
  >
    <div class="container mx-auto px-4 py-48">
      <!-- Section Header -->
      <div class="mb-16 text-center">
        <h2
          class="text-5xl md:text-6xl font-bold mb-4 uppercase tracking-tight"
        >
          Our Partners
        </h2>
        <div class="h-1 w-24 bg-accent mx-auto mb-8"></div>
        <p class="text-xl text-primary-content/75 max-w-2xl mx-auto">
          We're proud to collaborate with industry leaders who share our vision
          for exceptional workplace culture
        </p>
      </div>

      <!-- Sponsorship Tier -->
      <div class="mb-12 text-center pt-12">
        <h3
          class="text-2xl md:text-3xl font-semibold uppercase tracking-wider text-accent mb-6"
        >
          Workplace Culture Partners
        </h3>

        <!-- Sponsor Grid -->

        <div class="py-12 full-bleed">
          <InfiniteSliderBasic client:visible />
        </div>

        <div class="mt-16 text-center">
          <p class="text-lg text-primary-content/75 mb-6">
            Want to join these industry leaders?
          </p>
          <a
            href="#partner"
            class="btn btn-accent btn-lg rounded-full px-8 gap-2 transform transition-all hover:scale-105"
          >
            Become a Sponsor
            <Icon name="heroicons:arrow-long-right" class="w-5 h-5" />
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
