---
const { speaker } = Astro.props;
import { Picture } from "astro:assets";
import { Icon } from "astro-icon/components";
---

<div
  class="w-full card bg-base-200 rounded-2xl overflow-hidden hover:shadow-xl hover:bg-linear-to-br from-accent/10 to-base-100 transition-shadow group relative"
>
  <div class="card-body">
    <figure>
      <Picture
        src={speaker.data.image}
        alt={speaker.data.name}
        layout="responsive"
        width={430}
        height={430}
        class="rounded-2xl transform transition-transform duration-500 group-hover:scale-105"
      />
    </figure>
    <div class="">
      <h2
        class="text-base-content card-title md:text-xl xl:text-2xl font-bold my-2"
      >
        {speaker.data.name}
        {
          speaker.data.role && (
            <span class="badge badge-accent  font-normal">
              {" "}
              {speaker.data.role}{" "}
            </span>
          )
        }
      </h2>

      <p class="text-base-content/75 mb-4">{speaker.data.title}</p>

      <p class="text-base-content/75">{speaker.data.bio}</p>

      <div class="card-actions">
        {
          speaker.data.links && (
            <div class="mt-4 flex gap-3">
              {speaker.data.links.website && (
                <a
                  href={speaker.data.links.website}
                  target="_blank"
                  class="btn btn-square btn-sm md:btn-md lg:btn-lg btn-soft hover:btn-accent transition-all"
                >
                  <Icon name="mdi:web" class="w-5 h-5 md:w-7 md:h-7" />
                </a>
              )}
              {speaker.data.links.linkedin && (
                <a
                  href={speaker.data.links.linkedin}
                  class="btn btn-square btn-sm md:btn-md lg:btn-lg btn-soft hover:btn-accent transition-all"
                  target="_blank"
                >
                  <Icon name="mdi:linkedin" class="w-5 md:w-7 h-5 md:h-7" />
                </a>
              )}
            </div>
          )
        }
      </div>
    </div>
  </div>
  <!-- Accent Border Effect -->
  <!-- <div -->
  <!--   class="absolute inset-0 border-2 border-transparent group-hover:border-accent rounded-2xl transition-all duration-300 pointer-events-none" -->
  <!-- > -->
  <!-- </div> -->
</div>
